<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>it.infocamere.aces.aces-e</groupId>
		<artifactId>aces-e</artifactId>
		<version>1.0.0-SNAPSHOT</version>
	</parent>
	<artifactId>acesEar</artifactId>
	<packaging>ear</packaging>
	<name>acesEar</name>
	<description>aces componente di backend</description>

	<build>
		<finalName>${project.artifactId}</finalName>
		<resources>
			<resource>
				<directory>${basedir}/persistence</directory>
				<filtering>true</filtering>
				<includes>
					<include>persistence.xml</include>
				</includes>
				<targetPath>${project.build.directory}/${project.build.finalName}/META-INF/</targetPath>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-ear-plugin</artifactId>
				<configuration>
					<!-- <version>8</version> -->
					<defaultLibBundleDir>lib</defaultLibBundleDir>
					<skinnyWars>true</skinnyWars>
					<earSourceDirectory>EarContent</earSourceDirectory>
					<modules>
						<ejbModule>
							<groupId>it.infocamere.aces.aces-e</groupId>
							<artifactId>acesEjb</artifactId>
							<bundleFileName>acesEjb.jar</bundleFileName>
						</ejbModule>
						<webModule>
							<groupId>it.infocamere.aces.aces-e</groupId>
							<artifactId>acesApi</artifactId>
							<bundleFileName>acesApi.war</bundleFileName>
							<contextRoot>acesApi</contextRoot>
						</webModule>
					</modules>
					<archive>
						<manifestEntries>
							<Dependencies>org.apache.httpcomponents,org.apache.james.mime4j,org.jboss.resteasy.resteasy-multipart-provider</Dependencies>
						</manifestEntries>
					</archive>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<profiles>
		<profile>
			<id>deploy_local</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.jboss.as.plugins</groupId>
						<artifactId>jboss-as-maven-plugin</artifactId>
						<version>7.9.Final</version>
						<executions>
							<execution>
								<goals>
									<goal>deploy</goal>
								</goals>
								<phase>install</phase>
								<configuration>									
									<skip>false</skip>
									<name>${project.artifactId}.${project.packaging}</name>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
	<dependencies>
		<dependency>
			<groupId>it.infocamere.aces.aces-e</groupId>
			<artifactId>acesEjb</artifactId>
			<version>${project.version}</version>
			<type>ejb</type>
		</dependency>
		<dependency>
			<groupId>it.infocamere.aces.aces-e</groupId>
			<artifactId>acesApi</artifactId>
			<version>${project.version}</version>
			<type>war</type>
		</dependency>
	</dependencies>
</project>